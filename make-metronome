#!/bin/bash

INSTRUMENT=116 # woodblock

source drills.lib

PAT=cGEC
generate_tempos metronome/4x64 "
  X:0
  M:4/4
  L:1/4
  Q:100
  K:C
  %%MIDI program $((INSTRUMENT - 1))
  |:$PAT|$PAT|$PAT|$PAT|$PAT|$PAT|$PAT|$PAT:|
  |:$PAT|$PAT|$PAT|$PAT|$PAT|$PAT|$PAT|$PAT:|
  |:$PAT|$PAT|$PAT|$PAT|$PAT|$PAT|$PAT|$PAT:|
  |:$PAT|$PAT|$PAT|$PAT|$PAT|$PAT|$PAT|$PAT:|
  "
generate_tempos metronome/fs.4x4 "
  X:0
  M:4/4
  L:1/4
  Q:100
  K:C
  %%MIDI program $((INSTRUMENT - 1))
  |$PAT|$PAT|$PAT|$PAT|
  Q:50
  |$PAT|$PAT|$PAT|$PAT|
  "

PAT=cGC
